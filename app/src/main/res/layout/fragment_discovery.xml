<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_travel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_more_item_bk"
            android:drawableTop="@mipmap/travel"
            android:gravity="center"
            android:padding="10dp"
            android:text="旅  游"
            android:textColor="@color/common_gray_darker"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_technology"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_more_item_bk"
            android:drawableTop="@mipmap/keji"
            android:gravity="center"
            android:padding="10dp"
            android:text="科  技"
            android:textColor="@color/common_gray_darker"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_games"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_more_item_bk"
            android:drawableTop="@mipmap/games"
            android:gravity="center"
            android:padding="10dp"
            android:text="游  戏"
            android:textColor="@color/common_gray_darker"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_basketball"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/select_more_item_bk"
            android:drawableTop="@mipmap/basketball"
            android:gravity="center"
            android:padding="10dp"
            android:text="篮  球"
            android:textColor="@color/common_gray_darker"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>